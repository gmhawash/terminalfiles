au BufNewFile,BufRead *.py set tabstop=2 softtabstop=2 shiftwidth=2 textwidth=80 smarttab expandtab
au BufNewFile,BufRead *.rs set tabstop=2 softtabstop=2 shiftwidth=2 textwidth=80 smarttab expandtab
au FileType python set ts=2 sts=2 et sw=2 smartindent cinwords=if,elif,else,for,while,try,except,finally,def,class
filetype plugin indent on

let g:python_highlight_all = 1
